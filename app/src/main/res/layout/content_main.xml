<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bvgiants.diary3.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#faf8f8"
    android:clickable="false"
    android:contextClickable="false">

    <!--\\\\\\ Heading ///////-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_name"
        android:id="@+id/titleName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="40sp" />

    <!--\\\\\\\\\\Buttons ////////-->
    <Button
        style="@style/menuButtons"
        android:id="@+id/buttonRun"
        android:background="@drawable/buttonchanges"
        android:text="@string/run_button"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/titleName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true" />

    <Button
        style="@style/menuButtons"
        android:id="@+id/buttonEat"
        android:background="@drawable/buttonchanges"
        android:text="@string/eat_button"
        android:layout_below="@+id/buttonRun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        style="@style/menuButtons"
        android:id="@+id/buttonData"
        android:background="@drawable/buttonchanges"
        android:text="@string/data_button"
        android:layout_below="@+id/buttonEat"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:onClick="menuSelect"/>

    <Button
        style="@style/menuButtons"
        android:id="@+id/buttonSettings"
        android:background="@drawable/buttonchanges"
        android:text="@string/settings_button"
        android:layout_below="@+id/buttonData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp" />

    <ProgressBar
        android:id="@+id/progressBarStepsGoal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:progress="0"
        android:secondaryProgress="0"
        android:indeterminate="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:focusable="false"
        android:contextClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="15dp"
        android:text="@string/glance"
        android:id="@+id/atAGlanceTitle"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"
        android:layout_below="@+id/buttonSettings"
        android:layout_alignStart="@+id/buttonSettings" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStepGoal"
        android:layout_below="@+id/atAGlanceTitle"
        android:layout_alignStart="@+id/progressBarStepsGoal"
        android:layout_marginTop="5dp"
        android:text="@string/textSteps"
        android:textSize="15sp"
        android:textStyle="normal"
        android:inputType="none" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBarCalories"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginTop="77dp"
        android:progress="0"
        android:secondaryProgress="0"
        android:indeterminate="false"
        android:focusable="false"
        android:contextClickable="true"
        android:layout_below="@+id/progressBarStepsGoal"
        android:layout_alignStart="@+id/progressBarStepsGoal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCalorieGoal"
        android:layout_marginTop="41dp"
        android:text="@string/textCalorie"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_below="@+id/progressBarStepsGoal"
        android:layout_alignStart="@+id/progressBarCalories"
        android:inputType="none" />

</RelativeLayout>
