<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bvgiants.diary3.runActivity"
    tools:showIn="@layout/activity_run">

    <!--\\\\\\\ Heading ///////-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/run_button"
        android:id="@+id/runTitle"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/stepCounterView"
        android:layout_marginTop="77dp"
        android:textSize="32dp"
        android:layout_below="@+id/runTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="steps"
        android:id="@+id/stepsSuffix"
        android:textSize="32dp"
        android:layout_alignTop="@+id/stepCounterView"
        android:layout_toEndOf="@+id/stepCounterView"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="You have walked"
        android:id="@+id/textSummary"
        android:layout_above="@+id/stepsSuffix"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:textSize="25dp" />

</RelativeLayout>
